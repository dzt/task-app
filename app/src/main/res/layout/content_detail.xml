<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:showIn="@layout/activity_detail"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:background="#f2f3f5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_details"
        android:layout_marginTop="109dp"
        android:text="Tap to Edit"
        android:textColor="#5d5d5f"
        android:textSize="11dp" />

    <EditText
        android:id="@+id/name_details"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="72dp"
        android:background="#00ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="This is a checklist" />

    <Button
        android:id="@+id/delete_details"
        android:layout_width="22dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name_details"
        android:layout_marginEnd="23dp"
        android:background="@drawable/trash" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_notes"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Notes"
                android:textColor="#000" />

            <TextView
                android:id="@+id/notes_details"
                android:layout_width="292dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:lines="1"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="Excepteur sint occaecat cupidatat non..."
                android:textColor="#c9c9c9" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_dueDate"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Due Date"
                android:textColor="#000" />

            <TextView
                android:id="@+id/dueDate_details"
                android:layout_width="292dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="None"
                android:textColor="#c9c9c9" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="List"
                android:textColor="#000" />

            <TextView
                android:id="@+id/list_details"
                android:layout_width="292dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="Checklist"
                android:textColor="#c9c9c9" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>